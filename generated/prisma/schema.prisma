// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Post {
  id             Int           @id @default(autoincrement())
  name           String
  description    String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  createdBy      User          @relation(fields: [createdById], references: [id])
  createdById    String
  saunaSession   SaunaSession? @relation(fields: [saunaSessionId], references: [id])
  saunaSessionId String?
  achievement    Achievement?  @relation(fields: [achievementId], references: [id])
  achievementId  String?
  likes          Like[]
  images         PostImage[]
  comments       Comment[]

  @@index([name])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?
  email                    String?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String         @id @default(cuid())
  name               String?
  email              String?        @unique
  emailVerified      DateTime?
  image              String?
  accounts           Account[]
  sessions           Session[]
  posts              Post[]
  saunas             Sauna[]
  saunaSessions      SaunaSession[] @relation("SaunaSessionToUser")
  likes              Like[]
  comments           Comment[]
  createdEvents      Event[]        @relation("CreatedEvents")
  participatedEvents Event[]        @relation("ParticipatedEvents")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Sauna {
  id                String             @id @default(cuid())
  harviaDeviceId    String?            @unique
  name              String
  location          String?
  users             User[]
  sessions          SaunaSession[]
  saunaMeasurements SaunaMeasurement[]
  events            Event[]
}

model SaunaSession {
  id                 String             @id @default(cuid())
  harviaSessionId    String? // Re-adding for tracking imported Harvia sessions
  saunaId            String
  sauna              Sauna              @relation(fields: [saunaId], references: [id], onDelete: Cascade)
  startTimestamp     DateTime
  endTimestamp       DateTime? // Nullable for ongoing sessions
  durationMs         Float? // Nullable for ongoing sessions
  maxTemperature     Float?
  avgTemperature     Float?
  minTemperature     Float?
  maxHumidity        Float?
  avgHumidity        Float?
  minHumidity        Float?
  maxPresence        Float?
  avgPresence        Float?
  latestPIRTimestamp DateTime? // To track the last PIR activity for session ending logic
  status             SaunaSessionStatus @default(ONGOING) // ONGOING, ENDED, DRAFT
  endedManually      Boolean            @default(false)
  manual             Boolean            @default(false)
  participants       User[]             @relation("SaunaSessionToUser")
  posts              Post[]
}

enum SaunaSessionStatus {
  ONGOING
  ENDED
  DRAFT
}

model Like {
  id        String   @id @default(cuid())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model PostImage {
  id        String   @id @default(cuid())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    Int
  url       String
  createdAt DateTime @default(now())
}

model Achievement {
  id          String  @id @default(cuid())
  name        String  @unique
  description String
  metric      String?
  value       String?
  unit        String?
  posts       Post[]
}

model SaunaMeasurement {
  id          String   @id @default(cuid())
  saunaId     String
  sauna       Sauna    @relation(fields: [saunaId], references: [id], onDelete: Cascade)
  timestamp   DateTime
  temperature Float
  humidity    Float
  precence    Float

  @@unique([saunaId, timestamp])
}

model Comment {
  id          String   @id @default(cuid())
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
  post        Post     @relation(fields: [postId], references: [id])
  postId      Int
}

model Event {
  id           String   @id @default(cuid())
  name         String
  description  String
  date         DateTime
  location     String
  maxAttendees Int
  status       String   @default("invited")
  sauna        Sauna    @relation(fields: [saunaId], references: [id])
  saunaId      String
  createdBy    User     @relation("CreatedEvents", fields: [createdById], references: [id])
  createdById  String
  participants User[]   @relation("ParticipatedEvents")
}
